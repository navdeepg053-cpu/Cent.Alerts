# Backend Environment Variables
# Copy this file to .env and fill in the values

# MongoDB Configuration (Required)
MONGO_URL=mongodb://your-mongo-url
DB_NAME=your-database-name

# Telegram Bot Configuration (Required for alerts)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Backend URL (Required for webhook registration)
# This should be your public URL where the app is deployed
# Example: https://your-app.onrender.com
REACT_APP_BACKEND_URL=https://your-app-url.com

# CORS Origins (Optional, defaults to *)
# Comma-separated list of allowed origins
# Example: https://your-frontend.com,https://another-domain.com
CORS_ORIGINS=*

# Port (Optional, defaults to 8000)
# Note: Render.com will automatically set the PORT environment variable
PORT=8000
